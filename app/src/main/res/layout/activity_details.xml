<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_margin="0dp"
            android:background="#358e74"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="39dp"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/poster_image"
            android:text="Every child comes into the world full of promises, and none more so than Chappie."
            tools:layout_editor_absoluteY="220dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@android:color/darker_gray"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_marginLeft="-20dp" />

        <ImageView
            android:id="@+id/fav_button"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            app:layout_constraintLeft_toLeftOf="@+id/rating"
            app:layout_constraintTop_toBottomOf="@+id/rating"
            android:background="#94e1cd"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/year"
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:layout_marginBottom="12dp"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/duration"
            app:layout_constraintLeft_toLeftOf="@+id/duration"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_editor_absoluteY="28dp"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/poster_image"
            app:layout_constraintTop_toTopOf="@+id/poster_image"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:textStyle="italic" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="@+id/duration"
            app:layout_constraintTop_toBottomOf="@+id/duration"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="9sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/fav_button"
            app:layout_constraintRight_toRightOf="@+id/fav_button"
            app:layout_constraintTop_toTopOf="@+id/fav_button"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:text="MARK AS FAVORITE" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/trailers_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>